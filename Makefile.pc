# Constants
PKGCONFIG = pkg-config
FILENAME = funkin
CFLAGS = 
LDFLAGS = 

# Win32
ifeq ($(OS),Windows_NT)
  WINDOWS := 1
endif
ifeq ($(WINDOWS),1)
	CFLAGS += -mwindows
endif

# Options
ifeq ($(STDMEM), 1)
	CFLAGS += -DPSXF_STDMEM
endif

# Release and debug
ifeq ($(RELEASE), 1)
	CFLAGS += -O3 -Wall -Wextra -pedantic -DPSXF_PC -DNDEBUG
	LDFLAGS += -s -flto
else
	CFLAGS += -Og -ggdb3 -Wall -Wextra -pedantic -DPSXF_DEBUG -DPSXF_PC
endif

# Link GLFW
CFLAGS += `$(PKGCONFIG) --cflags glfw3`

ifeq ($(STATIC), 1)
	LDFLAGS += -static
	LIBS += `$(PKGCONFIG) --libs glfw3 --static`
else
	LIBS += `$(PKGCONFIG) --libs glfw3`
endif

# Other CXX flags
CFLAGS += -MMD -MP -MF $@.d

# Sources to compile
SOURCES = main \
		  mem \
		  mutil \
		  random \
		  archive \
		  font \
		  trans \
		  loadscr \
		  menu \
		  stage \
		  pc/psx \
		  pc/io \
		  pc/gfx \
		  pc/audio \
		  pc/pad \
		  pc/timer \
		  pc/glad/glad \
		  stage/dummy \
		  stage/week1 \
		  stage/week2 \
		  stage/week3 \
		  stage/week4 \
		  stage/week5 \
		  stage/week7 \
		  animation \
		  character \
		  character/bf \
		  character/bfweeb \
		  character/gf \
		  character/speaker \
		  character/dad \
		  character/spook \
		  character/pico \
		  character/mom \
		  character/xmasp \
		  character/senpai \
		  character/senmad \
		  character/tank \
		  object \
		  object/combo \
		  object/splash

# What to compile
OBJECTS = $(addprefix obj/$(FILENAME)/, $(addsuffix .o, $(SOURCES)))
DEPENDENCIES = $(addprefix obj/$(FILENAME)/, $(addsuffix .o.d, $(SOURCES)))

# Compilation
all: bin/$(FILENAME)

bin/$(FILENAME): $(OBJECTS)
	@mkdir -p $(@D)
	@echo Linking...
	@$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@ $(LIBS)

obj/$(FILENAME)/%.o: src/%.c
	@mkdir -p $(@D)
	@echo Compiling $<
	@$(CC) $(CFLAGS) $< -o $@ -c
	
include $(wildcard $(DEPENDENCIES))

# Remove all our compiled objects
clean:
	@rm -rf obj
